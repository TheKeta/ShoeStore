@model ShoeStore.Presentation.ViewModel.NewItemVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <div class="container">
            <div class="row centered-form">
                <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Add New Item</h3>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control input-sm", placeholder = "Email", type = "email" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control input-sm", placeholder = "Password", type = "password" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <input type="submit" value="Login" class="btn btn-info btn-block">
                    }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @foreach (var item in Model)
        {
            @Html.Partial("ItemPreview", item)
        }
    </div>
</div>